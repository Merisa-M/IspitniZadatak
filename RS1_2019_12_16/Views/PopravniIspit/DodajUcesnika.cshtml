
@{
    ViewData["Title"] = "DodajUcesnika";
}
@model RS1_2019_12_16.ViewModels.PopravniIspitDodajUcesnikaVM
<h2>DodajUcesnika</h2>

<div>
    <form asp-controller="PopravniIspit" asp-action="SnimiUcesnika">
        <input asp-for="PopravniIspitID" value="@Model.PopravniIspitID" hidden />

        <div class="form-group">
            <label class="control-label">Ucesnik</label>
            <select class="form-control" asp-for="OdjeljenjeStavkaID" asp-items="@Model.Ucesnici"></select>


        </div>
        <div class="form-group">
          <input type="submit" value="Snimi" class="btn btn-danger" />


        </div>
    </form>


</div>