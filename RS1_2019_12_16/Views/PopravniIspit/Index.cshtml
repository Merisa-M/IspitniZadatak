
@{
    ViewData["Title"] = "Index";
}
@model RS1_2019_12_16.ViewModels.PopravniIspitIndexVM
<h2>Korisnik moze odabrati skolsku godinu, skolu i predmet</h2>
<div class="row">
    <div class="col-md-4">
        <form asp-controller="PopravniIspit" asp-action="Odaberi">
            <div class="form-group">
                <label class="control-label" asp-for="SkolskaGodinaID">Skolska godina:</label>
                <select class="form-control" asp-for="SkolskaGodinaID" asp-items="@Model.SkolskeGodine"></select>
            </div>
            <div class="form-group">
                <label class="control-label" asp-for="SkolaID">Skola:</label>
                <select class="form-control" asp-for="SkolaID" asp-items="@Model.Skole"></select>
            </div>
            <div class="form-group">
                <label class="control-label" asp-for="PredmetID">Predmet:</label>
                <select class="form-control" asp-for="PredmetID" asp-items="@Model.Predmeti"></select>
            </div>
            <div class="form-group">
               <input value="Odaberi"type="submit"  class="btn btn-danger"/>
            </div>


        </form>



    </div>




</div>

